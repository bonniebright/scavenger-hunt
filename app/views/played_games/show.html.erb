<h1> <%= @played_game.game.name %> </h1>
<h4> <%= @played_game.game.location.latitude %> <%= @played_game.game.location.longitude %> </h4>
<div id="map-canvas">
</div>

<div class="form">
  <%= form_tag '/guesses', :method => :post, :remote => true  do %>
    <%= hidden_field_tag :location, nil, :id => "location-field" %>
    <%= hidden_field_tag :played_game_id, nil, value: @played_game.id %>
  <% end %>
</div>

<div class='clues'>
  <ul>
  <% @clues.each do |clue| %>
    <li class="clue"><%= clue.content %></li>
    <% end %>
  </ul>
</div>
