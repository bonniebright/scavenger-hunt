<%= render("layouts/errors", :object => @game) %>

<h1>New Game</h1>

<%= form_for @game do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <%= f.hidden_field :location, :id => "location-field" %>
  <% if current_user != nil %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  <% end %>

  <%= f.submit(:class => "btn btn-primary") %>
<% end %>

<div id="map-canvas">

</div>
